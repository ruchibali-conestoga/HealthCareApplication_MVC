@{
    ViewData["Title"] = "Dashboard";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    function clearForm() {
    document.getElementById("patientModal").querySelector("form").reset();
    document.getElementById("modalTitle").innerText = "Add Patient";
    }
    <style>
        .sidebar {
            height: 100vh;
            width: 250px;
            position: fixed;
            top: 0;
            left: 0;
            background-color: #343a40;
            padding-top: 20px;
            color: white;
        }

        .sidebar a {
            padding: 10px 15px;
            text-decoration: none;
            font-size: 18px;
            display: block;
            color: white;
        }

        .sidebar a:hover {
            background-color: #495057;
        }

        .main-content {
            margin-left: 260px;
            padding: 20px;
        }
    </style>
</head>
<body>

    <!-- Sidebar -->
    <div class="sidebar">
        <h4 class="text-center">Dashboard</h4>
        <a asp-controller="Account" asp-action="PatientHomePage">Patients</a>
        <a asp-controller="Doctor" asp-action="DoctorHomePage">Doctors</a>
        <a asp-controller="Appointment" asp-action="AppointmentList">Appointments</a>
        <a asp-controller="Report" asp-action="ReportList">Reports</a>
        <a asp-controller="Account" asp-action="Logout">Logout</a>
    </div>

    <!-- Main Content -->
    <div class="main-content">
        <h2>Welcome to the Dashboard</h2>
        <p>Select an option from the sidebar to manage records.</p>
    </div>

</body>
</html>
